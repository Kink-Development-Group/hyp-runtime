Focus {

  entrance {
    observe "=== Advanced HypnoScript feature test ===";
    observe "";
  }

  // Test 1: freeze (const variables)
  observe "--- Test 1: Freeze (constants) ---";
  freeze PI: number = 3.14159;
  observe "PI = " + PI;
  observe "";

  // Test 2: implant (alternative variable declaration)
  observe "--- Test 2: Implant (alternate var) ---";
  implant secretCode: number = 42;
  observe "Secret Code = " + secretCode;
  observe "";

  // Test 3: anchor (store state)
  observe "--- Test 3: Anchor (store state) ---";
  induce counter: number = 100;
  anchor savedCounter = counter;
  observe "Original Counter: " + counter;
  counter = 200;
  observe "Changed counter: " + counter;
  counter = savedCounter;
  observe "Restored counter: " + counter;
  observe "";

  // Test 4: whisper (output without newline)
  observe "--- Test 4: Whisper (no newline) ---";
  whisper "This ";
  whisper "is ";
  whisper "a ";
  whisper "line";
  observe "";
  observe "";

  // Test 5: command (imperative output)
  observe "--- Test 5: Command (imperative) ---";
  command "Wake up!";
  observe "";

  // Test 6: oscillate (boolean toggle)
  observe "--- Test 6: Oscillate (Toggle) ---";
  induce isActive: boolean = false;
  observe "isActive before oscillate: " + isActive;
  oscillate isActive;
  observe "isActive after oscillate: " + isActive;
  oscillate isActive;
  observe "isActive after 2x oscillate: " + isActive;
  observe "";

  // Test 7: trigger (event handler)
  observe "--- Test 7: Trigger (event handler) ---";
  trigger onEvent = suggestion(message: string) {
    observe "Trigger fired: " + message;
  }

  onEvent("Hello from trigger!");
  observe "";

  // Test 8: deepFocus statement
  observe "--- Test 8: DeepFocus statement ---";
  induce x: number = 15;
  if (x > 10) deepFocus {
    observe "x is greater than 10 (deepFocus)";
    observe "Dropping deeper into trance...";
  }
  observe "";

  // Test 9: Hypnotic operators
  observe "--- Test 9: Hypnotic operators ---";
  induce a: number = 10;
  induce b: number = 10;

  if (a youAreFeelingVerySleepy b) {
    observe "a youAreFeelingVerySleepy b (a == b)";
  }

  if (a lookAtTheWatch 5) {
    observe "a lookAtTheWatch 5 (a > 5)";
  }

  if (a yourEyesAreGettingHeavy 5) {
    observe "a yourEyesAreGettingHeavy 5 (a >= 5)";
  }
  observe "";

  finale {
    observe "";
    observe "=== All tests complete ===";
  }

} Relax
